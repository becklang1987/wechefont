<!--pages/home/home.wxml-->
<button bindtap="bindButtonTap" class="default_btn">使得输入框获取焦点</button>
<view >
  <view class="container1" wx:for="{{newList}}" wx:key="index">
    <view class="default_item1">------- Property:{{item.pItem}} -----</view>
    <view class="default_item2">Config: {{item.vItem}}</view>
    <input hidden="{{item.pItem==='id'}}" class="default_input" bindinput="bindInput" type="text" placeholder-class="input_placeholder" placeholder="Enter Config: {{item.pItem}}"></input>
  </view>
</view>