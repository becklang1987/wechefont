page {
    height: 100%;
    background-color:rgb(255, 255, 255);

}
.default_input { 
    border-top: none;
    border-left: none;
    border-right: none;
    color: black;
    font-size: large;
    padding: None;
    margin: none;
    text-align: middle;
    height: 80rpx;
    border-radius: none;
}
.default_item1{
    display: flex;
    border-top: none;
    border-left: none;
    border-right: none;
    color: black;
    font-size: large;
    align-items: center;
    justify-content: center;
    padding: None;
    margin: none;
    height: 60rpx;
    background-color: white;
} 
.default_item2{
    border-bottom: #18b75a 8rpx solid;
    border-top: none;
    border-left: none;
    border-right: none;
    margin-bottom:10rpx;
    background-color: white;
    color: black;
    font-size: large;
    padding: None;
    margin: none;
