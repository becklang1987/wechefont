    border-radius: none;

} 
.default_btn{
    width: 100%;
    border-top: #1235c2;
    border-top-style: solid;
    border-top-width: 100%; 
    border-bottom: #1235c2;
    border-bottom-style: solid;
    border-radius: 20rpx;
    font-weight: 400;
    background-color: white;
    font-size: larger;
} 
.input_placeholder{
    color: black;
    font-size:large;
    font-weight: 400;
}
